<style lang="scss">
  @import "../layouts/stylesheet/main.scss";

  section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 50px;
    position: relative;
  }
  @media screen and (max-width: 825px) {
        section{
          flex-direction: column;
        }
      }
  .part1 {
    background-color: $violet;
    border-radius: 30px;
    height: 853px;
    padding-left: 100px;
    padding-top: 35px;
    width: 455px;

    .element {
      margin-bottom: 37.9px;

      h4 {
        color: #ffffff;
        font-family: "Poppins-Thin";
        letter-spacing: 5px;
        font-size: 13px;
        margin-bottom: 8px;
      }
      p {
        color: #ffffff;
        font-family: "Poppins";
      }
    }

    .logo {
      display: flex;
      flex-direction: row;
      gap: 20px;
    }
  }
  @media screen and (max-width: 825px) {
        .part1{
          width: 100%;
          padding: 50px;
        }
  }
  @media screen and (max-width: 1000px) {
        .part1{
          padding: 50px;
        }
  }
  @media screen and (max-width: 321px) {
      .part1{
          padding: 20px;
        }
        }

  .part2 {
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    align-items: flex-start;
    .numbers {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      grid-column-gap: 112px;
      grid-row-gap: 50px;

      .number {
        h5 {
          font-size: 20px;
          color: $violet;
          font-family: "Poppins-Thin";
          letter-spacing: 5px;
        }
        p {
          font-size: 80px;
          font-family: "Poppins-Bold";
          color: $pink;
        }
        @media screen and (max-width: 825px) {
          p{
            font-size: 55px;
          }
        }
        h5{
          font-size: 14px;
        }
      }

    }
    @media screen and (max-width: 825px) {
          .numbers{
            grid-column-gap: 12px;
          }
        }
    .information {
      h6 {
        color: $violet;
        font-size: 26px;
        font-family: "Poppins-Bold";
        margin-bottom: 30px;
        width: 455px;
      }
      p {
        color: $violet;
        font-size: 15px;
        font-family: "Poppins";
        margin-bottom: 24.5px;
        width: 455px;
      }
      button {
        background-color: $pink;
        width: 100%;
        height: 78px;
        border-radius: 20px;
        display: flex;
        flex-direction: row;
        padding-top: 26px;
        padding-bottom: 26px;
        justify-content: center;
        gap: 44px;
        transition: 500ms;
        &:hover {
          background-color: $violet;
        }
        p {
          color: #ffffff;
          font-size: 17px;
          font-family: "Poppins-Bold";
          width: fit-content;
          letter-spacing: 4px;
        }
      }
      @media screen and (max-width: 1000px) {
        button{
          width: 100%;
          
        }
        p, h6{
          width: fit-content;
        }
      }
    }
  }
