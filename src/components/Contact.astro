<style lang="scss">
  @import "../layouts/stylesheet/main.scss";
  .formulaire {
    background-color: $violet;
    width: 455px;
    height: 723px;
    border-radius: 30px;
    padding: 45px;

    label p {
      color: #ffffffff;
      font-family: "Poppins";
      font-size: 14px;
      line-height: 23.8px;
    }
  }
  @media screen and (max-width: 770px) {
    .formulaire {
    width: 100%;
  }
  }
  
  input,
  textarea {
    border-bottom: 2px solid #ffffffff;
    background-color: $violet;
    min-width: 369px;
    max-width: 369px;
    margin-bottom: 50px;
  }
  @media screen and (max-width: 770px) {
    input,
  textarea  {
    min-width: 100%;
    max-width: 100%;
  }
  }
  textarea {
    height: 150px;
  }
  button {
    color: #ffffffff;
    font-family: "Poppins-bold";
    font-size: 14px;
    letter-spacing: 3px;
    position: relative;
    transition: 0.35s;
    &:hover {
      color: $backpink;
    }
    &::before {
      content: "";
      width: 215px;
      height: 3px;
      position: absolute;
      background-color: #ffffffff;
      transition: width 0.35s ease-out;

      bottom: -33.5px;
    }
    &:hover::before {
      background-color: #ffffff;
      width: 5px;
    }
  }
  .information {
    display: flex;
    flex-direction: column;
    gap: 50px;
    p {
      color: $violet;
      font-family: "Poppins";
      font-size: 15px;
      line-height: 30px;
    }
    h5 {
      color: $violet;
      font-family: "Poppins-Bold";
      font-size: 26px;
      line-height: 25.5px;
    }
    .logo {
      display: flex;
      flex-direction: row;
      gap: 20px;
      fill: $violet;
    }
  }
  section {
    display: flex;
    gap: 50px;
    position: relative;
    h2{
      right: 77%;
    }
    @media screen and (max-width: 1024px) {
      h2{
          top: -22%;
          left: 0;

      }
    }
    @media screen and (max-width: 825px) {
        h2{
            top: -5%;
        }
    }
  }
  @media screen and (max-width: 770px) {
    section {
    flex-direction: column;
  }
  }
</style>
