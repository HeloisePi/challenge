  <div class="headermobile">

    <div class="headershow">
      <img class="logo" src="/image/logo.png" alt="" />
      <div class="toggle">
        <div class="menu-line"></div>
        </div>
    </div>
    <div class="slide close">
      <a class="close-menu" href="/#home"><p>HOME</p></a>
      <a class="close-menu" href="/#about"><p>ABOUT</p></a>
      <a class="close-menu" href="/#service"><p>SERVICES</p></a>
      <a class="close-menu" href="/#portfolio"><p>PORTFOLIO</p></a>
      <a class="close-menu" href="/#skills"><p>SKILLS</p></a>
      <a class="close-menu" href="/#experience"><p>EXPERIENCE</p></a>
