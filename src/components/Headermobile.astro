      <a class="close-menu" href="/#contact"><p>CONTACT</p></a>
      <a class="close-menu" href="#!"><p>EXTRA PAGES</p></a>
    </div>
  </div>
</section>

<style lang="scss">
  @import "../layouts/stylesheet/main.scss";
  
  section{
    overflow: hidden;
    position: relative;
  }
  .headermobile {
    top: 0;
    left: 0;
    z-index: 3;
    position: fixed;
    
    .headershow {
      height: 65px;
      width: 100vw;
      background-color: $pink;
      display: flex;
      justify-content: space-between;
      align-items: center;
      
      .toggle{
        width: 25px;
        height: 25px;
        position: absolute;
        right: 20px;
        top: 20px;
        left: auto;
      
        
        
      .menu-line{
        pointer-events: none;
        width: 100%;
        height: 3px;
        position: absolute;
        -webkit-transition: all .25s;
        transition: all .25s;
        top: 10px;
        background-color: #ffffff;
        &:before{
          content: '';
          pointer-events: none;
          height: 3px;
          width: 100%;
          position: absolute;
          -webkit-transform-origin: left ;
          transform-origin: left ;
          -webkit-transition: -webkit-transform .25s;
          -webkit-transition: all .25s;
          transition: all .25s;
          top: 10px;
          background-color: #ffffff;
        }
        &:after{
          content: '';
          pointer-events: none;
          height: 3px;
          width: 100%;
          position: absolute;
          -webkit-transform-origin:  left;
          transform-origin: left;
          -webkit-transition: -webkit-transform .25s;
          -webkit-transition: all .25s;
          transition: all .25s;
          top: -10px;
          background-color: #ffffff;
        }
      }
      }

      img {
        width: 25px;
        height: 23px;
        margin-right: 20px;
      }
      .logo {
        width: 65px;
        height: 65px;
      }
    }
    .close {
      transform: translateX(100%);
    }
  
    .slide {
      background-color: $pink;
      height: 100vh;
      width: 250px;
      right: 0%;
      position: absolute;
      padding: 5%;
      transition: 0.5s;

      p {
        font-size: 14px;
        font-family: "Poppins";
        color: #ffffff;
        letter-spacing: 1px;
        line-height: 24px;
        margin-bottom: 5px;
      }
    }
  }

  section .headermobile .headershow .is-close 
    .menu-line{
      background-color: $pink;
      &::before{
        content: '';
          width: 28px;
          transform: rotate(-45deg);
          opacity: 1;
      }
      &::after{
        content: '';
          width: 28px;
          transform: rotate(45deg);
          opacity: 1;
      }
    }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const headermobile = document.querySelector(".headermobile");
    const toggle = document.querySelector(".toggle");
    const slide = document.querySelector(".slide");

    headermobile.addEventListener("click", function (e) {
      console.log('ga')
      if (e.target.classList.contains("toggle")) {
        slide.classList.toggle("close");
        toggle.classList.toggle("is-close");
       }
      if (e.target.classList.contains("close-menu")) {
          slide.classList.remove("close");
       }
    });
  });
</script>