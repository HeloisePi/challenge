---
import Buttonservice from "./objects/Buttonservice.astro";
---

<section id="service">
  <h2 anim-left-opacity>Svcs</h2>
  <div class="separation">
    <Buttonservice title="Design" />
    <Buttonservice title="Video" />
    <Buttonservice title="Photos" />
  </div>
  <div class="separation">
    <Buttonservice title="Code" />
    <Buttonservice title="Music" />
    <Buttonservice title="Graphics" />
  </div>
</section>
<style lang="scss">
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-column-gap: 50px;
    position: relative;

    h2{
      right: 79%;
    }
    @media screen and (max-width: 1024px) {
      h2{
          top: -23%;
          left: 0;

      }
    }
    @media screen and (max-width: 825px) {
        h2{
            top: -11%;
        }
    }
 
    
    .separation {
      display: flex;
      flex-direction: column;
      gap: 50px;
    }
  }

  @media screen and (max-width: 1015px) {
        section{
          grid-template-columns: 1fr;
          grid-row-gap: 30px;
        
      }
      .separation{
        gap: 25px;
      }
    }
</style>
