<style lang="scss">
  @import "../layouts/stylesheet/main.scss";
  section {
    position: relative;
    h2{
      top: 4%;
      right: 82%;
    }
    @media screen and (max-width: 1024px) {
      h2{
          top: -15%;
          left: 0;

      }
    }
    @media screen and (max-width: 825px) {
        h2{
            top: -6%;
        }
    }
    .line {
      top: 0;
      left: 50%;
      transform: translateX(50%);
      background-color: #ffffff;
      height: 100%;
      width: 3px;
      position: absolute;
    }
    @media screen and (max-width: 1024px) {
      .line{
        left: 98%;
      }
    }
  }
  @media screen and (max-width: 1024px) {
    section{
      display: flex;
      flex-direction:column;
      align-items:  flex-end;
    }
  }
  .element {
    width: fit-content;
    height: fit-content;
    position: relative;
    .arrow {
      position: absolute;
      top: 50%;
      transform: translate(-50%, -9px);
    }
  }

  section .element:nth-child(even) {
    transform: translateX(140%);
  }
  section .element:nth-child(odd) {
    .arrow {
      right: -14px;
      transform: rotate(180deg);
    }
  }
  @media screen and (max-width: 1024px) {
    section .element:nth-child(even) {
      transform: translateX(0%);
      
      }
      .arrow {
      right: -14px;
      
    }
    section .element:nth-child(even) {
    .arrow {
      transform: rotate(180deg);
    }
  }
  .element{
    margin-right: 70px;
    margin-bottom: 20px;
  }
    }
    @media screen and (max-width: 314px) {
      .element{
    margin-right: 40px;
  }
    }
  .compagnies {
    margin-top: 100px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: 1fr 1fr;
    grid-row-gap: 50px;
    grid-column-gap: 50px;
  }
  @media screen and (max-width: 1024px) {
    .compagnies{
      grid-template-columns: 1fr;
      grid-template-areas: 1fr 1fr 1fr 1fr;

    }
  }
</style>
